{
  "name": "example-update-aws-lambda-fast",
  "private": true,
  "description": "AWS Lambda を高速にアップデートするサンプルです。",
  "scripts": {
    "build": "esbuild src/index.ts --outfile=dist/index.js --bundle --minify --platform=node --target=node14",
    "dev": "nodemon --watch src/ --ext ts --exec 'time run-s build deploy:function'",
    "deploy:function": "serverless deploy --function index",
    "deploy:serverless": "serverless deploy",
    "deploy": "run-s build deploy:serverless"
  },
  "author": "mryhryki",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.11.21",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "serverless": "^2.41.2",
    "typescript": "^4.2.4"
  }
}
